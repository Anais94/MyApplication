<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fffff7b9"
    xmlns:android="http://schemas.android.com/apk/res/android">


 <RelativeLayout
     android:layout_height="match_parent"
     android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fffff7b9"
    android:orientation="vertical"
     android:layout_width="wrap_content">

    <TextView
        android:id="@+id/recipe"
        android:text="Recette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#ff070103"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/titreRecette"
        android:text="titre de la recette"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/recipe"
        android:textColor="#ffb91223"
        android:background="#ffffcb0f"


        />

    <TextView
        android:id="@+id/tpsPrep"
        android:text="temps de préparation"
        android:textStyle="bold"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/titreRecette"
        android:textColor="#ffb91223"

        />

    <TextView
        android:id="@+id/dure"
        android:text="durée"
        android:textStyle="italic"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ff070103"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/typePlate"
        android:layout_toRightOf="@+id/tpsPrep"
        android:layout_toEndOf="@+id/tpsPrep" />

    <TextView
        android:id="@+id/min"
        android:text="min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ff070103"
        android:layout_alignTop="@+id/dure"
        android:layout_alignRight="@+id/dure"
        android:layout_alignEnd="@+id/dure" />
    <TextView
        android:id="@+id/typePlate"
        android:text="type de plat"
        android:textStyle="bold"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tpsPrep"
        android:textColor="#ffb91223"
 />

    <TextView
        android:id="@+id/platPrincipal"
        android:text="plat principal"
        android:textStyle="italic"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ff070103"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/listIng"
        android:layout_toRightOf="@+id/typePlate"
        android:layout_toEndOf="@+id/tpsPrep" />

    <TextView
        android:id="@+id/listIng"
        android:text="Ingrédients"
        android:textStyle="bold"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/typePlate"
        android:textColor="#ffb91223"/>

    <TextView
        android:id="@+id/ingdt"
        android:text="ingredients e rentrer pour faire une liste "
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ff070103"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/listIng"
        android:layout_toEndOf="@+id/listIng"
        android:layout_below="@+id/platPrincipal"
        android:layout_alignBottom="@+id/preparation" />

    <TextView
        android:id="@+id/preparation"
        android:text="Préparation :"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/listIng"
        android:textColor="#ffb91223"/>

     <WebView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:id="@+id/maWebView"
         android:layout_below="@+id/preparation"
         android:layout_marginTop="20sp"
         android:textColor="#ff070103"
         android:background="#ffffcb0f"
         android:visibility="invisible"/>

 </RelativeLayout>
    </ScrollView>
