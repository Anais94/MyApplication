<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff7b9"
    >

    <RelativeLayout
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="#fffff7b9"
        tools:context="com.example.anas.myapplication.Administrateur"
        android:layout_width="wrap_content">

        <TextView
            android:text="Ecrivez le contenu de votre recette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titrePr"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff070103"/>

        <Button
            android:layout_height="30sp"
            android:layout_width="180sp"
            android:id="@+id/creation"
            android:text="CrÃ©ez votre recette !"
            android:background="#ffb91223"
            android:textColor="#ffffcb0f"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/titrePr"
            android:layout_marginTop="25sp"
            />

        <EditText
            android:id="@+id/preparation"
            android:layout_width="fill_parent"
            android:layout_height="180sp"
            android:layout_below="@+id/creation"
            android:background="#fffffae7"
            android:inputType="textMultiLine"
            android:textSize="20sp"
            android:hint="Ecrivez le contenu de votre recette"
            android:layout_marginTop="15sp"
            />
    </RelativeLayout>
</ScrollView>